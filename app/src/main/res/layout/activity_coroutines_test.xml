<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".any.coroutines.CoroutinesTestActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tv_delay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="延迟显示时间戳"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tv_view_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="学习viewModel协程"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tv_coroutine_exception_handler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="coroutineExceptionHandler实战"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tv_flow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="flow实战"/>

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>